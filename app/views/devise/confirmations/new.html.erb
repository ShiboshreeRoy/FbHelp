<h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Resend Confirmation Instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <!-- Error Messages -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field -->
  <div class="mb-6">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
      value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), 
      class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Submit Button -->
  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: "w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-500 transition duration-300" %>
  </div>
<% end %>

<!-- Links -->
<%= render "devise/shared/links" %>
