<div class="flex items-center justify-center min-h-screen w-full py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-6">
        <%= f.label :email, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Pending Confirmation Message -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-yellow-600 mb-4">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Password Field -->
      <div class="mb-6">
        <%= f.label :password, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <i class="text-sm text-gray-500">(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <% if @minimum_password_length %>
          <br />
          <em class="text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Current Password Field -->
      <div class="mb-6">
        <%= f.label :current_password, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <i class="text-sm text-gray-500">(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Submit Button -->
      <div class="actions">
        <%= f.submit "Update", 
          class: "w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-500 transition duration-300" %>
      </div>
    <% end %>

    <!-- Cancel Account Section -->
    <h3 class="text-xl font-semibold text-gray-800 mt-8">Cancel my account</h3>
    <div class="text-sm text-gray-700 mt-4">
      Unhappy? 
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, 
        class: "text-red-600 hover:text-red-500 transition duration-300" %>
    </div>

    <!-- Back Link -->
    <div class="mt-4">
      <%= link_to "Back", :back, class: "text-blue-600 hover:text-blue-500 transition duration-300" %>
    </div>
  </div>
</div>
