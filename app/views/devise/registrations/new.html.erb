<div class="flex items-center justify-center min-h-screen w-full  py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-6">
        <%= f.label :email, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Password Field -->
      <div class="mb-6">
        <%= f.label :password, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Submit Button -->
      <div class="actions">
        <%= f.submit "Sign Up", 
          class: "w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-500 transition duration-300" %>
      </div>
    <% end %>

    <!-- Links -->
    <%= render "devise/shared/links" %>
  </div>
</div>
