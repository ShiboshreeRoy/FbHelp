<h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Change Your Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <!-- Error Messages -->
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <!-- Hidden Token Field -->
  <%= f.hidden_field :reset_password_token %>

  <!-- Password Field -->
  <div class="mb-6">
    <%= f.label :password, "New Password", class: "block text-lg font-medium text-gray-700 mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", 
      class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Confirm Password Field -->
  <div class="mb-6">
    <%= f.label :password_confirmation, "Confirm New Password", class: "block text-lg font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", 
      class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Submit Button -->
  <div class="actions">
    <%= f.submit "Change My Password", 
      class: "w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-500 transition duration-300" %>
  </div>
<% end %>

<!-- Links -->
<%= render "devise/shared/links" %>
