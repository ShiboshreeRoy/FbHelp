<div class="flex items-center justify-center min-h-screen w-full py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-sm w-full bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Email Field -->
      <div class="mb-6">
        <%= f.label :email, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Password Field -->
      <div class="mb-6">
        <%= f.label :password, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", 
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="mb-6 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-lg font-medium text-gray-700" %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="actions">
        <%= f.submit "Log in", 
          class: "w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-500 transition duration-300" %>
      </div>
    <% end %>

    <!-- Links for Forgot Password and Sign Up -->
    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
